<section class="hero-page">
    <section class="bg-color-white">
        <div class="container title-content">
            <div class="row mb-4">
                <div class="col-xs-12 col-md-12 col-xl-9 px-md-4">
                    <div class="breadcrumbs mb-3">
                        {% if breadcrumbs %}
                        <p class="h6 color-blue">
                            {% for item in breadcrumbs %}
                                {% if item.url %}
                                <a href="{{ item.url }}">
                                {% endif %}
                                    <span class="color-blue">{{ item.text }}{{ loop.last ? "" : " \\ "}}</span>
                                {% if item.url %}
                                </a>
                                {% endif %}
                            {% endfor %}
                        </p>
                        {% endif %}
                    </div>
                    <h1 class="color-grey-dark">{{ post.post_title }}</h1>
                </div>
            </div>
            <div class="row position-relative {% if post.thumbnail and post.thumbnail.width > 800 %} ht-150 {% endif %} release-mobile z-index-10">
                <div class="post-content col-xs-12 col-md-8 col-xl-8 col-xxl-6 bg-color-white {% if post.thumbnail and post.thumbnail.width < 800 %} position-relative {% else %} position-absolute {% endif %} z-index-20 py-4 px-md-4">
                    <div class="full-width">
                        {{ post.post_excerpt | wpautop }}
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section class="hero-image-wrapper ratio ratio-21x9" {% if post.thumbnail and post.thumbnail.width < 800 %}style="text-align: center"{% endif %}>
        {% if post.thumbnail %}
                <img src="{{ post.thumbnail.src }}" alt="{{ post.post_title }}" class="" {% if post.thumbnail and post.thumbnail.width < 800 %}style="position: relative; left: auto; width: auto; height: auto;"{% endif %}>
                {% if post.thumbnail and post.thumbnail.width < 800 %}
                    <style>
                    .ratio::before {
                        padding-top: 0;
                    }
                    </style>
                {% endif %}
        {% endif %}
    {# <h5 class="d-none">{{ post.post_title }}</h5> #}
    </section>
</section>
{% if additionalContent %}
    {% include "components/htmlBlock/index.twig" with ({"html": additionalContent}) only %}
{% endif %}
