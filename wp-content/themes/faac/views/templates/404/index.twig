{% extends "templates/base/index.twig" %}

{% block content %}

	<section class="404-page">
		<div class="container-fluid my-3">
			<div class="container">
				<div class="row">
					<div class="col-12">
						<div class="ht-250 adaptive"></div>
						<h1 class="page-title color-blue">{{ post.post_title }}</h1>
					</div>
				</div>
                <div class="row position-relative release-mobile z-index-10">
					<div class="post-content col-xs-12 col-md-8 col-xl-6 bg-color-white z-index-20 py-4">
						<div class="full-width">
                            {{ post.post_content | wpautop }}
                        </div>
                    </div>
                </div>
			</div>
		</div>
	</section>

{% endblock %}

