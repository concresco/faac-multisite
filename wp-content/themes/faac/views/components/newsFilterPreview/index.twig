<div class="news-preview {% if size == "small" %}small{% elseif size == "big" %}big{% else %}medium{% endif %}">
    <a href="{{ post_url }}" style="color:#00577D; text-decoration: none">
        <div class="row" style="text-align: center">
            <div class="col-6">
                <div class="image ratio ratio-21x9">
                    <img style="object-fit: contain" src="{{ thumbnails.url }}" alt="{{ post_title }}">
                </div>
            </div>
            <div class="col-6" style="text-align: left;">
                <h4 style="color:#00577D; text-decoration: none" class="title-news {% if size == "small" %}h5{% endif %}">{{ post_title }}</h4>
            </div>
        </div>
    </a>
</div>