{% macro showcase(name, path = "", passObject = {}) %}
<section class="mt-2 mb-5">
  <div class="container">
    <div class="row">
      <div class="col-md-12 mb-2">
        <div class="alert alert-primary d-flex align-items-center justify-content-center" role="alert">
          <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Info:"><use xlink:href="#info-fill"></use>
            <symbol id="info-fill" fill="currentColor" viewBox="0 0 16 16">
              <path d="M8 16A8 8 0 1 0 8 0a8 8 0 0 0 0 16zm.93-9.412-1 4.705c-.07.34.029.533.304.533.194 0 .487-.07.686-.246l-.088.416c-.287.346-.92.598-1.465.598-.703 0-1.002-.422-.808-1.319l.738-3.468c.064-.293.006-.399-.287-.47l-.451-.081.082-.381 2.29-.287zM8 5.5a1 1 0 1 1 0-2 1 1 0 0 1 0 2z"></path>
            </symbol>
          </svg>
          <div>
            <h3 class="mb-0"><b>{{ name }}:</b></h3>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="container">
    <div class="row">
      <div class="col-md-12">
      {% include ("" ~ path) with passObject only %}
      </div>
    </div>
  </div>
</section>
{% endmacro %}

