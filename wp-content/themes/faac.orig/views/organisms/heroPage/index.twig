<section class="hero-page">
    <section class="bg-color-white">
        <div class="container title-content">
            <div class="row mb-4">
                <div class="col-xs-12 col-md-12 col-xl-9 px-md-4">
                    <div class="breadcrumbs mb-3">
                        {% if breadcrumbs %}
                        <h6 class="color-blue">
                            {% for item in breadcrumbs %}
                                {% if item.url %}
                                <a href="{{ item.url }}">
                                {% endif %}
                                    <span class="color-blue">{{ item.text }}{{ loop.last ? "" : " \\ "}}</span>
                                {% if item.url %}
                                </a>
                                {% endif %}
                            {% endfor %}
                        </h6>
                        {% endif %}
                    </div>
                    <h1 class="color-grey-dark">{{ post.post_title }}</h1>
                </div>
            </div>
            <div class="row position-relative ht-150 release-mobile z-index-10">
                <div class="post-content col-xs-12 col-md-8 col-xl-8 col-xxl-6 bg-color-white position-absolute z-index-20 py-4 px-md-4">
                    <div class="full-width">
                        {{ post.post_content | wpautop }}
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section class="hero-image-wrapper ratio ratio-21x9"
        {# {% if post.thumbnail %} #}
            {# style="background-image: url({{ post.thumbnail.src }})" #}
        {# {% endif %} #}
    >
        {% if post.thumbnail %}
            <img src="{{ post.thumbnail.src }}" alt="{{ post.post_title }}" class="">
        {% endif %}
    {# <h5 class="d-none">{{ post.post_title }}</h5> #}
    </section>
</section>
{% if additionalContent %}
    {% include "components/htmlBlock/index.twig" with ({"html": additionalContent}) only %}
{% endif %}
