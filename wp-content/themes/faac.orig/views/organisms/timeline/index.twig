{% set rnd = random(10000) %}
<section class="timeline py-5 line-up" data-swiper-id="{{ rnd }}" id="timeline_{{ rnd }}">
    <div class="container">
        <div class="row pt-2 mb-4">
            <div class="col-xs-12 col-md-7 text-start mt-2">
                <h2 class="h1">{{ title | default('Timeline / Story') }}</h2>
            </div>
            <div class="col-xs-12 col-md-5 mt-2">
                <div class="full-width full-height d-flex flex-row justify-content-between pe-3 pe-md-0 justify-content-md-end align-items-center">
                    <div class="year-selection mx-0 mx-md-3">
                        <select class="form-select">
                            <option value="">{{ selectText | default('Select Year')}}</option>
                            {% for slide in slides %}
                                <option value="{{ loop.index0 }}">{{ slide.year }}</option>
                            {% endfor %}
                        </select>
                    </div>
                    <div class="navigation with-arrow position-static mx-2">
                        <div class="slider-prev blue"></div>
                        <div class="slider-next blue"></div>
                    </div>
                </div>            
            </div>
            <div class="col-12 text-start">
                {% if subtitle %}
                    <p class="mt-3 mt-md-0">{{ subtitle }}</p>
                {% endif %}
            </div>
        </div>
        <div class="swiper">
            <div class="swiper-wrapper">
                {% for slide in slides %}
                    <div class="swiper-slide">
                        <div class="col-9">
                            <div class="ratio ratio-4x3">
                                <img src="{{ slide.img }}" alt="{{ slide.title }}" class="">
                            </div>                    
                        </div>
                        <div class="time-line-bar position-relative full-width">
                            <hr class="color-blue position-relative">
                        </div>
                        <div class="col-9">
                            <h4 class="color-blue mb-1 mt-3">{{ slide.year }}</h4>
                            <h5 class="title color-blue mb-2">{{ slide.title }}</h5>
                            <p>{{ slide.content | striptags('<b><strong><em><i><span><a>') }}</p>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
    
</section>