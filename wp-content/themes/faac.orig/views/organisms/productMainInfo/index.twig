<section class="product-main-info overflow-hidden">
    <div class="row">
        {# PRODUCT INFO COLUMN #}
        <div class="col-12 col-lg-6 position-relative order-1 order-lg-0">
            <div class="left-half-container lg-none ps-3 pe-3 ps-xl-2 pe-xl-3 pt-4 pb-3">
                <div class="row">
                    <div class="col-12">
                        {% if breadcrumbs %}
                            <div class="breadcrumbs mb-3">
                                <h6 class="color-blue">
                                    {% for item in breadcrumbs %}
                                    {% if item.url %}
                                    <a href="{{ item.url }}">
                                        {% endif %}
                                        <span class="color-blue">{{ item.text }}{{ loop.last ? "" : " \\ "}}</span>
                                        {% if item.url %}
                                    </a>
                                    {% endif %}
                                    {% endfor %}
                                </h6>
                            </div>
                        {% endif %}
                    </div>
                    {% if bimSection or dataSection or accessoriesSection %}
                        <div class="col-12">
                            <div class="quick-links">
                                <ul>
                                    {% if bimSection %}
                                        <li class="quick-link-item">
                                            <a href="#bim_section" class="quick-link-btn">BIM object</a>
                                        </li>
                                    {% endif %}
                                    {% if dataSection.item.ID == "tech_data_section" %}
                                        <li class="quick-link-item">
                                            <a href="#tech_data_section" class="quick-link-btn">Technical description</a>
                                        </li>
                                    {% endif %}
                                    {% if downloadSection %}
                                        <li class="quick-link-item">
                                            <a href="#download_section" class="quick-link-btn">Downloads</a>
                                        </li>
                                    {% endif %}
                                    {% if accessoriesSection %}
                                        <li class="quick-link-item">
                                            <a href="#accessories_section" class="quick-link-btn">Accessories</a>
                                        </li>
                                    {% endif %}
                                </ul>
                            </div>
                        </div>
                    {% endif %}
                    <div class="col-12">
                        <div class="product-title pt-2">
                            <h1>{{ title }}</h1>
                            {% if subtitle %}
                                <h5 class="color-grey line-height-normal pt-2">{{ subtitle }}</h5>
                            {% endif %}
                            {% if content %}
                                <div class="product-content add-read-more show-less-content pb-4">
                                    {{ content | wpautop }}
                                </div>
                            {% endif %}
                        </div>
                        {% if productExtraBtn %}
                            <div class="extra-btn">
                                {% for btn in productExtraBtn %}
                                    <a class="btn btn-black linear-out mb-2" href="{{ btn.url }}">{{ btn.textBtn }}</a>                            
                                {% endfor %}
                            </div>
                        {% endif %}                    
                    </div>
                </div>
    
            </div>
        </div>
        
        {# GALLERY COLUMN #}
        <div class="col-12 col-lg-6 px-0 order-0 order-lg-1">
            <div id="product_gallery" class="swiper">
                <div class="swiper-wrapper">
                    {% for slide in gallery %}
                    <div class="swiper-slide">
                        <div class="position-relative">
                            <div class="img-news ratio ratio-1x1">
                                <div class="gradient"></div>
                                <img class="" src="{{ slide.img }}" alt="{{ slide.caption }}">
                            </div>
                            {% if slide.caption %}
                            <div class="caption">
                                <p class="small m-0">{{ slide.caption | raw }}</p>
                            </div>
                            {% endif %}
                        </div>                
                    </div>
                    {% endfor %}
                </div>
                <div class="swiper-pagination"></div>
                <div class="navigation with-arrow me-lg-2">
                    <div class="slider-prev white"></div>
                    <div class="slider-next white"></div>
                </div>
            </div>
        </div>
    </div>
</section>